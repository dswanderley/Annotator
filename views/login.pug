extend layout

append stylesheets
    link(rel='stylesheet', href='/stylesheets/signin.css')
    
block content
    
    .main-content

        form.form-signin(action='/login', method='post')
            i.fas.fa-user.fa-5x(style="color:#17a2b8")
            h1.h3.mb-3.font-weight-normal Please sign in
            
            label.sr-only(for="username") Username or e-mail
            input#login.form-control(type="text", name="username", placeholder="Username or e-mail", required, autofocus)
            
            label.sr-only(for="password") Password
            input#password.form-control(type="password", name="password", placeholder="Password", required)

            .checkbox.mb-3
                input(type="checkbox", value="remember-me")
                label.remember Remember me

            button.btn.btn-lg.btn-info.btn-block(type="submit") Sign in